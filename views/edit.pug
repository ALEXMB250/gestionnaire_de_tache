extends layout

block content
    .row
        .col-md-4
            .card
                .card-header
                    h3 Editer une tache
                .card-body
                    form( method="POST", action="/editer/" + todo.id + "?_method=PUT")
                        .form-group
                            label(for='todo') Editer une tache:
                            input.form-control#todo(type='text', value=todo.title, name="title")
                        button(type="submit").btn.btn-primary.btn-block Editer